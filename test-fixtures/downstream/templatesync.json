{
  "ignore": ["src/!(templated).ts", "custom-bin/**"],
  "merge": [
    {
      "glob": "package.json",
      "plugin": "_json",
      "options": {
        "paths": [
          ["$.dependencies", "merge-template"],
          ["$.devDependencies", "merge-template"],
          ["$.engines", "merge-template"]
        ]
      }
    }
  ]
}
